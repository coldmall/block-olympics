<div class="olymp-view-h">

    <div class="olymp-view-h-img">
        <img src="{{image}}" alt="{{name}}">
    </div>

    <div class="olymp-view-h-main">
        <h2 class="olymp-view-h-title">{{name}}</h2>

        <p class="olymp-view-h-dates">
            Дата проведения: с {{start}} по {{end}}
        </p>

        <div class="olymp-view-h-desc">
            {{{description}}}
        </div>

        {{#canenrol}}
            <a class="btn btn-primary" href="{{enrolurl}}">Записаться</a>
        {{/canenrol}}

        {{#enrolled}}
            <div class="alert alert-info mt-2">Вы уже записаны.</div>
        {{/enrolled}}

        {{#canviewenrol}}
            <p class="mt-3 mb-0">
                <a href="{{enrolledurl}}">Список записавшихся</a>
            </p>
        {{/canviewenrol}}
    </div>
</div>
